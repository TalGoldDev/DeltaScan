# ==============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================================================
# Use this as reference for production deployment environment variables
# Set these in your deployment platform (Vercel, Render, Railway)
#
# Render: Dashboard → Service → Environment
# Vercel: Dashboard → Project → Settings → Environment Variables
# Railway: Dashboard → Service → Variables
# ==============================================================================

# ==============================================================================
# APPLICATION ENVIRONMENT
# ==============================================================================
NODE_ENV=production

# ==============================================================================
# SERVER CONFIGURATION (Render)
# ==============================================================================
# PORT is automatically set by Render - don't override
# PORT=10000
HOST=0.0.0.0

# Server URL - your Render deployment URL
# Example: https://deltascan.onrender.com
SERVER_URL=https://your-service-name.onrender.com

# ==============================================================================
# CLIENT CONFIGURATION (Vercel)
# ==============================================================================
# API endpoint for React client - must point to your Render server
# Example: https://deltascan.onrender.com
VITE_API_URL=https://your-service-name.onrender.com

# Client URL - your Vercel deployment URL
# Example: https://deltascan.vercel.app
CLIENT_URL=https://your-app.vercel.app

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
# Production frontend URL(s) - your Vercel deployment
# Multiple domains can be comma-separated
# Example: https://deltascan.vercel.app,https://www.deltascan.com
CORS_ORIGIN=https://your-app.vercel.app

# ==============================================================================
# DEPLOYMENT URLS
# ==============================================================================
# These are automatically set by the platforms but included for reference

# Vercel URL (automatically set by Vercel)
# VERCEL_URL=https://deltascan.vercel.app

# Render external URL (automatically set by Render)
# RENDER_EXTERNAL_URL=https://deltascan.onrender.com

# ==============================================================================
# API KEYS FOR PREDICTION MARKETS
# ==============================================================================
# CRITICAL: Use production API keys, not development keys!
POLYMARKET_API_KEY=your_production_polymarket_api_key_here

# Optional - add if using these platforms
KALSHI_API_KEY=your_production_kalshi_api_key
MANIFOLD_API_KEY=your_production_manifold_api_key
PREDICTIT_API_KEY=your_production_predictit_api_key

# ==============================================================================
# MARKET SCANNING CONFIGURATION
# ==============================================================================
# Production scanning interval (minutes)
SCAN_INTERVAL_MINUTES=5

# Enable automatic scanning
ENABLE_AUTO_SCAN=true

# Production arbitrage threshold (realistic opportunities only)
MIN_ARBITRAGE_THRESHOLD=1.5

# Production market scan limit
MAX_MARKETS_PER_SCAN=100

# ==============================================================================
# WEBSOCKET CONFIGURATION
# ==============================================================================
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_DELAY=5000

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
# Production log level - less verbose than development
LOG_LEVEL=info

# Enable error logging in production
ENABLE_ERROR_LOGGING=true

# JSON format for structured logging in production
LOG_FORMAT=json

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# If using a database, add connection string here
# Example for Render PostgreSQL:
# DATABASE_URL=postgresql://user:password@dpg-xxxxx.oregon-postgres.render.com/dbname
# DATABASE_POOL_SIZE=10
# DATABASE_SSL=true

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
# If using Redis for caching
# Example for Render Redis:
# REDIS_URL=rediss://red-xxxxx.oregon-redis.render.com:6379
# REDIS_TLS=true
# REDIS_TTL=3600

# ==============================================================================
# SECURITY & AUTHENTICATION
# ==============================================================================
# CRITICAL: Use a strong, randomly generated secret in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_IN_PRODUCTION_DO_NOT_USE_THIS_DEFAULT

# JWT expiration
JWT_EXPIRES_IN=7d

# Production rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================================================
# MONITORING & ANALYTICS
# ==============================================================================
# Sentry for error tracking and monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry environment
SENTRY_ENVIRONMENT=production

# Sentry release version (can be set by CI/CD)
# SENTRY_RELEASE=deltascan@1.0.0

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
FEATURE_WEBSOCKET_ENABLED=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_HISTORICAL_DATA=false

# ==============================================================================
# PERFORMANCE & OPTIMIZATION
# ==============================================================================
# Enable production optimizations
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# Cache TTL (seconds)
CACHE_TTL=300

# ==============================================================================
# SECURITY HEADERS
# ==============================================================================
# Enable security headers in production
ENABLE_SECURITY_HEADERS=true
ENABLE_HELMET=true

# ==============================================================================
# PLATFORM-SPECIFIC SETTINGS
# ==============================================================================

# Render specific
# RENDER_GIT_COMMIT=$RENDER_GIT_COMMIT
# RENDER_SERVICE_NAME=$RENDER_SERVICE_NAME

# Vercel specific (automatically set)
# VERCEL_ENV=production
# VERCEL_GIT_COMMIT_SHA=$VERCEL_GIT_COMMIT_SHA

# ==============================================================================
# HEALTH CHECKS & MONITORING
# ==============================================================================
# Enable health check endpoint
ENABLE_HEALTH_CHECK=true

# Health check path
HEALTH_CHECK_PATH=/health

# ==============================================================================
# BACKUP & DISASTER RECOVERY
# ==============================================================================
# If implementing automated backups
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30

# ==============================================================================
# IMPORTANT SECURITY NOTES
# ==============================================================================
# 1. Never commit this file with real values to version control
# 2. Use your deployment platform's secret management:
#    - Render: Environment Groups for shared secrets
#    - Vercel: Environment Variables with encryption
#    - Railway: Shared Variables
# 3. Rotate secrets regularly (at least quarterly)
# 4. Use different API keys for production vs development
# 5. Enable 2FA on all service accounts
# 6. Monitor for exposed secrets using GitHub secret scanning
# 7. Use environment-specific secrets for staging vs production
# 8. Review access logs regularly
# 9. Implement secret rotation procedures
# 10. Document all secrets in your team's secure password manager
# ==============================================================================
