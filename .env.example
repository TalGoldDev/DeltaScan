# DeltaScan Environment Variables
# Copy this file to .env and fill in your values

# ==============================================================================
# APPLICATION ENVIRONMENT
# ==============================================================================
NODE_ENV=production

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
# Port configuration
# Note: Railway/Render automatically set PORT - don't override unless needed
# PORT=3001
HOST=0.0.0.0

# Server URL (used by client to connect to API)
# Development: http://localhost:3001
# Production: Your deployed server URL
SERVER_URL=http://localhost:3001

# ==============================================================================
# CLIENT CONFIGURATION (Frontend)
# ==============================================================================
# API endpoint for the React client (Vite apps use VITE_ prefix)
# Development: http://localhost:3001
# Production: Your deployed server URL (e.g., https://your-app.render.com)
VITE_API_URL=http://localhost:3001

# Client URL (used for CORS configuration)
# Development: http://localhost:5173
# Production: Your Vercel URL
CLIENT_URL=http://localhost:5173

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
# Set this to your frontend URL in production
# Multiple origins can be comma-separated
# Development: http://localhost:5173
# Production: https://your-app.vercel.app
CORS_ORIGIN=http://localhost:5173

# ==============================================================================
# DEPLOYMENT URLS (Production)
# ==============================================================================
# These are typically set in your deployment platform (Vercel, Render, Railway)
# Uncomment and set when deploying

# Vercel deployment URL (client)
# VERCEL_URL=https://deltascan.vercel.app

# Render deployment URL (server)
# RENDER_EXTERNAL_URL=https://deltascan.onrender.com

# ==============================================================================
# API KEYS FOR PREDICTION MARKETS
# ==============================================================================
# Polymarket API Key (required for Polymarket integration)
POLYMARKET_API_KEY=your_polymarket_api_key_here

# Other prediction market API keys (optional)
KALSHI_API_KEY=
MANIFOLD_API_KEY=
PREDICTIT_API_KEY=

# ==============================================================================
# MARKET SCANNING CONFIGURATION
# ==============================================================================
# How often to scan markets (in minutes)
SCAN_INTERVAL_MINUTES=5

# Enable automatic market scanning
ENABLE_AUTO_SCAN=true

# Minimum arbitrage opportunity threshold (percentage)
MIN_ARBITRAGE_THRESHOLD=1.5

# Maximum number of markets to scan per request
MAX_MARKETS_PER_SCAN=100

# ==============================================================================
# WEBSOCKET CONFIGURATION
# ==============================================================================
# WebSocket connection settings for real-time updates
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_DELAY=5000

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
# Log level options: error, warn, info, debug, verbose
LOG_LEVEL=info

# Enable detailed error logging
ENABLE_ERROR_LOGGING=true

# Log format: json, simple, or pretty
LOG_FORMAT=pretty

# ==============================================================================
# DATABASE CONFIGURATION (if needed in future)
# ==============================================================================
# Uncomment when adding database support
# DATABASE_URL=postgresql://user:password@localhost:5432/deltascan
# DATABASE_POOL_SIZE=10
# DATABASE_SSL=true

# ==============================================================================
# REDIS CONFIGURATION (for caching, if needed)
# ==============================================================================
# Uncomment when adding Redis support
# REDIS_URL=redis://localhost:6379
# REDIS_TTL=3600

# ==============================================================================
# SECURITY & AUTHENTICATION
# ==============================================================================
# JWT secret for user authentication (if implementing auth)
# JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# JWT_EXPIRES_IN=7d

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================================================
# MONITORING & ANALYTICS (optional)
# ==============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics ID
# GA_TRACKING_ID=G-XXXXXXXXXX

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable/disable features
FEATURE_WEBSOCKET_ENABLED=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_HISTORICAL_DATA=false

# ==============================================================================
# DEVELOPMENT ONLY
# ==============================================================================
# These should only be set in development
# DEBUG=deltascan:*
# MOCK_API_RESPONSES=false
