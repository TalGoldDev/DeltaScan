# ==============================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this to .env.development for local development
# These settings are optimized for running DeltaScan locally
# ==============================================================================

# ==============================================================================
# APPLICATION ENVIRONMENT
# ==============================================================================
NODE_ENV=development

# ==============================================================================
# SERVER CONFIGURATION
# ==============================================================================
PORT=3001
HOST=localhost

# Server URL (for client configuration)
SERVER_URL=http://localhost:3001

# ==============================================================================
# CLIENT CONFIGURATION
# ==============================================================================
# API endpoint for React client (Vite development server uses port 5173)
VITE_API_URL=http://localhost:3001

# Client URL
CLIENT_URL=http://localhost:5173

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
# Allow localhost for development
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ==============================================================================
# API KEYS FOR PREDICTION MARKETS
# ==============================================================================
# Get your development API keys from respective platforms
POLYMARKET_API_KEY=your_dev_polymarket_api_key_here

# Optional - uncomment if testing these integrations
# KALSHI_API_KEY=
# MANIFOLD_API_KEY=
# PREDICTIT_API_KEY=

# ==============================================================================
# MARKET SCANNING CONFIGURATION
# ==============================================================================
# Scan more frequently in development for testing
SCAN_INTERVAL_MINUTES=1

# Enable auto scanning
ENABLE_AUTO_SCAN=true

# Lower threshold for testing
MIN_ARBITRAGE_THRESHOLD=0.5

# Limit markets in development
MAX_MARKETS_PER_SCAN=20

# ==============================================================================
# WEBSOCKET CONFIGURATION
# ==============================================================================
WS_HEARTBEAT_INTERVAL=15000
WS_RECONNECT_DELAY=3000

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
# Verbose logging for development
LOG_LEVEL=debug

# Enable detailed error logging
ENABLE_ERROR_LOGGING=true

# Pretty format for readability
LOG_FORMAT=pretty

# ==============================================================================
# SECURITY & AUTHENTICATION
# ==============================================================================
# Development JWT secret (change this!)
JWT_SECRET=dev-secret-change-me-in-production
JWT_EXPIRES_IN=7d

# Relaxed rate limiting for development
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
FEATURE_WEBSOCKET_ENABLED=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_HISTORICAL_DATA=false

# ==============================================================================
# DEVELOPMENT TOOLS
# ==============================================================================
# Enable debug logging
DEBUG=deltascan:*

# Mock API responses for testing without real API keys
MOCK_API_RESPONSES=false

# Enable hot reload
HOT_RELOAD=true

# Disable caching for development
DISABLE_CACHE=true
